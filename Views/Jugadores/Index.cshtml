@model IEnumerable<FUTLex.Models.Player>
@{ 
    string search = ViewData["SEARCH"] as string;
    List<int> ids = ViewData["IDS"] as List<int>;
}

    <form style="border-radius :20px; " class="form-inline bg-white p-2 custom-radio shadow" method="post">

        <input class="form-control d-inline-block  col-6 ml-3 " type="search" placeholder="Search" name="nombre">&emsp;&emsp;
        <button class="btn btn-outline-success  col-5" type="submit">Search</button>


    </form>
<br />
@if (Model.Count() > 0)
{
<div class="card p-3 shadow " style=" background-color: rgba(245, 245, 245, 0.85)">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.club_image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.nation_image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.rating)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.full_name)
                </th>


                <th>
                    @Html.DisplayNameFor(model => model.position)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.version)
                </th>
                <th></th>
                <th></th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>

                    <img src="@item.image" style="height:100px ; width:100px;" />
                </td>
                <td>

                    <img src="@item.club_image" style="height:100px ; width:100px;" />
                </td>
                <td>

                    <img src="@item.nation_image" style="height:80px ; width:80px;" />
                </td>
                <td>
                    <strong style="font-size: 200%" class="font-weight-bold ">@item.rating</strong>
                </td>



                <td>
                    <strong style="font-size:150%" class="font-weight-bold ">@Html.DisplayFor(modelItem => item.full_name)</strong>
                </td>



                <td>
                    @Html.DisplayFor(modelItem => item.position)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.version)
                </td>

                @if (ids.Contains(item.id) == true)
                {
            <td>
                <a class="btn btn-outline-primary disabled">Fichado</a>&ensp;
            </td>
                }
                else
                {
                    <td>
                        <a class="btn btn-success" asp-action="Fichar" asp-route-id="@item.id" asp-route-search="@ViewData["SEARCH"]">Fichar</a>&ensp;

                    </td>
                }

                <td>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.id" asp-route-search="@ViewData["SEARCH"]">Detalles</a>&ensp;

                </td>
                <td> <a class="btn btn-secondary" asp-action="Precios" asp-route-id="@item.id" asp-route-search="@ViewData["SEARCH"]">Precios</a>&ensp;</td>

            </tr>
            }
        </tbody>
    </table>
</div>
}

